{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist/types",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./build",
    "strict": true,
    "target": "es2018",
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/__tests__",
    "src/**/*.test.js",
    "src/**/*.test.ts"
  ]
}
